<style>
    div.is-loading{position:absolute;background:rgba(194,5,5,.9);color:#fff;font-size:13px;width:90px;height:20px;font-family:monospace;padding-left:5px;padding-top:1px;padding-bottom:2px;z-index:999999;}
</style>
<div class="is-loading" style="display: none;">Loading...</div>

<script type="text/javascript">
    $(document).ajaxStart(function() {
        $(document).on('mousemove', function(e) {
            $('div.is-loading').show();
            $('div.is-loading').css('top', e.pageY + 10);
            $('div.is-loading').css('left', e.pageX + 10);
        });
    }).ajaxStop(function() {
        $('div.is-loading').hide();
        $(document).off('mousemove');
    });
</script>