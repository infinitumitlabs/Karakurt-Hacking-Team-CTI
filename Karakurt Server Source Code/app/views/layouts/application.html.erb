      </div>
      <div class="clearfix"></div>
    </div>
  </footer>
</div>

<span class="totop">Go to <em>TOP</em></span>

<script>
    $(function () {
        $("article.ciz-post").on({
            mouseenter: function () {
                $(this).parent().addClass('dark-mode');
            },
            mouseleave: function () {
                $(this).parent().removeClass('dark-mode');
            }
        });

        $('body').on('click', 'a.btn-expand', function(event) {
            event.preventDefault();
            $(this).prev("span").toggleClass('hide');

            if($(this).text() === 'expand') {
                $(this).text('collapse');
            } else {
                $(this).text('expand');
            }

            return false;
        });
    });
</script>

