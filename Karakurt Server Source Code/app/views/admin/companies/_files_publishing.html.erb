<div class="inner-list">
  <% files.each do |file| %>
    <div class="inner-list-item media-flex-center">
      <i class="far <%= icon_by_file_mime_type(file.mime_type) %>"></i>
      <div class="file-name-label flex-meta is-light flex-truncate"><%= file.filename %></div>
      <div class="flex-end">
        <span class="is-light is-family-monospace file-date"><%= number_to_human_size(file.filesize) %></span>
        <div class="buttons file-buttons">
          <button class="button is-small is-danger is-outlined">
            <span class="icon is-small">
              <i class="fa fa-trash-alt"></i>
            </span>
          </button>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if files.total_pages > 1 %>
  <div class="files-paginate">
    <%= paginate_ajax files, page_links: false, table: table %>
  </div>
<% end %>
